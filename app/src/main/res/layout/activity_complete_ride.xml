<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.crest.driver.CompleteRide">
    <include layout="@layout/action_bar_home"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_weight="1.3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THANK"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="32dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOU!"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="32dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="for ride with us"
                android:padding="20dp"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="top"
            android:layout_margin="@dimen/layout_margin"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_title"
                android:text="start point"
                android:textAllCaps="true"
                android:textColor="@color/colorGrey"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ahmedabad"
                android:textSize="@dimen/text_detail"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_title"
                android:text="drop point"

                android:textAllCaps="true"
                android:layout_marginTop="@dimen/margin_top"
                android:textColor="@color/colorGrey"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gita mandir"
                android:textSize="@dimen/text_detail"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_title"
                android:text="payable amount"
                android:textAllCaps="true"

                android:layout_marginTop="@dimen/margin_top"
                android:textColor="@color/colorGrey"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="120 rs."
                android:textSize="@dimen/text_detail"
                android:textColor="@color/colorBlack"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom">

                <Button
                    android:id="@+id/bt_make_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/black_button"
                    android:text="@string/button_complete_ride_payment"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
